using System;

class Solution
{
    static void Main(string[] args)
        {
                int q = int.Parse(Console.ReadLine()); // number of test cases
                
                        for (int t = 0; t < q; t++)
                                {
                                            string s = Console.ReadLine();
                                            
                                                        int result = GetPalindromeIndex(s);
                                                                    Console.WriteLine(result);
                                                                            }
                                                                                }
                                                                                
                                                                                    // Helper function to find index
                                                                                        static int GetPalindromeIndex(string s)
                                                                                            {
                                                                                                    int left = 0;
                                                                                                            int right = s.Length - 1;
                                                                                                            
                                                                                                                    // Step 1: Walk inward with two pointers
                                                                                                                            while (left < right)
                                                                                                                                    {
                                                                                                                                                if (s[left] != s[right])
                                                                                                                                                            {
                                                                                                                                                                            // Step 2: If mismatch occurs, test skipping left or right
                                                                                                                                                                                            if (IsPalindrome(s, left + 1, right))
                                                                                                                                                                                                                return left;
                                                                                                                                                                                                                                else if (IsPalindrome(s, left, right - 1))
                                                                                                                                                                                                                                                    return right;
                                                                                                                                                                                                                                                                    else
                                                                                                                                                                                                                                                                                        return -1;
                                                                                                                                                                                                                                                                                                    }
                                                                                                                                                                                                                                                                                                                left++;
                                                                                                                                                                                                                                                                                                                            right--;
                                                                                                                                                                                                                                                                                                                                    }
                                                                                                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                                                                                                            // Already a palindrome
                                                                                                                                                                                                                                                                                                                                                    return -1;
                                                                                                                                                                                                                                                                                                                                                        }
                                                                                                                                                                                                                                                                                                                                                        
                                                                                                                                                                                                                                                                                                                                                            // Check if substring is a palindrome
                                                                                                                                                                                                                                                                                                                                                                static bool IsPalindrome(string s, int left, int right)
                                                                                                                                                                                                                                                                                                                                                                    {
                                                                                                                                                                                                                                                                                                                                                                            while (left < right)
                                                                                                                                                                                                                                                                                                                                                                                    {
                                                                                                                                                                                                                                                                                                                                                                                                if (s[left] != s[right])
                                                                                                                                                                                                                                                                                                                                                                                                                return false;
                                                                                                                                                                                                                                                                                                                                                                                                                            left++;
                                                                                                                                                                                                                                                                                                                                                                                                                                        right--;
                                                                                                                                                                                                                                                                                                                                                                                                                                                }
                                                                                                                                                                                                                                                                                                                                                                                                                                                        return true;
                                                                                                                                                                                                                                                                                                                                                                                                                                                            }
                                                                                                                                                                                                                                                                                                                                                                                                                                                            }
