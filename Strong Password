using System;
using System.Text.RegularExpressions;

class Solution
{
    static void Main(string[] args)
        {
                int n = int.Parse(Console.ReadLine());
                        string password = Console.ReadLine();
                        
                                int missing = 0;
                                
                                        if (!Regex.IsMatch(password, "[0-9]")) missing++;       // check digit
                                                if (!Regex.IsMatch(password, "[a-z]")) missing++;       // check lowercase
                                                        if (!Regex.IsMatch(password, "[A-Z]")) missing++;       // check uppercase
                                                                if (!Regex.IsMatch(password, "[!@#$%^&*()\\-+]")) missing++; // check special char
                                                                
                                                                        // Password length must be at least 6
                                                                                int result = Math.Max(missing, 6 - n);
                                                                                
                                                                                        Console.WriteLine(result);
                                                                                            }
                                                                                            }
