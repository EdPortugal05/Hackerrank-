using System;

class Solution
{
    static void Main(string[] args)
        {
                // Step 1: Read the number of test cases
                        int q = int.Parse(Console.ReadLine());
                        
                                for (int t = 0; t < q; t++)
                                        {
                                                    string s = Console.ReadLine();
                                                    
                                                                int deletions = 0;
                                                                
                                                                            // Step 2: Walk through the string, checking each pair of neighbors
                                                                                        for (int i = 1; i < s.Length; i++)
                                                                                                    {
                                                                                                                    // If the current character is the same as the previous one,
                                                                                                                                    // then we would need to delete it to make characters alternate
                                                                                                                                                    if (s[i] == s[i - 1])
                                                                                                                                                                    {
                                                                                                                                                                                        deletions++;
                                                                                                                                                                                                        }
                                                                                                                                                                                                                    }
                                                                                                                                                                                                                    
                                                                                                                                                                                                                                // Step 3: Print how many deletions are needed
                                                                                                                                                                                                                                            Console.WriteLine(deletions);
                                                                                                                                                                                                                                                    }
                                                                                                                                                                                                                                                        }
                                                                                                                                                                                                                                                        }
