using System;

class Solution {
    static void Main() {
            int steps = int.Parse(Console.ReadLine());
                    string path = Console.ReadLine().Trim();
                    
                            int level = 0;
                                    int valleys = 0;
                                            for (int i = 0; i < path.Length; i++) {
                                                        char c = path[i];
                                                                    if (c == 'U') {
                                                                                    level++;
                                                                                                    // if we just came up to sea level -> closed a valley
                                                                                                                    if (level == 0) valleys++;
                                                                                                                                } else {
                                                                                                                                                level--;
                                                                                                                                                            }
                                                                                                                                                                    }
                                                                                                                                                                            Console.WriteLine(valleys);
                                                                                                                                                                                }
                                                                                                                                                                                }
